# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

# JS/JSX/TS/TSX files
[*.{js,jsx,ts,tsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# CSS/SCSS files
[*.{css,scss}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
