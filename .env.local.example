# Environment Variables for Decor'em by Sonya Mehta
# Copy this file to .env.local and fill in your actual values

# ====================
# EMAIL SERVICE
# ====================
# SendGrid API Key (for contact form notifications)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Alternative: Mailgun credentials
# MAILGUN_API_KEY=your_mailgun_api_key_here
# MAILGUN_DOMAIN=your_mailgun_domain_here

# ====================
# WEBHOOKS
# ====================
# Zapier webhook URL (optional, for form submissions)
WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/your_webhook_id

# ====================
# DATABASE
# ====================
# MongoDB connection string (optional, for storing contacts)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/decorem

# ====================
# ANALYTICS
# ====================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ====================
# CONTACT INFO
# ====================
NEXT_PUBLIC_PHONE=+1 (281) 701-6041
NEXT_PUBLIC_EMAIL=decorembysonyamehta@gmail.com
NEXT_PUBLIC_ADDRESS=Houston, Texas

# ====================
# CALENDLY
# ====================
# Calendly scheduling link (optional)
NEXT_PUBLIC_CALENDLY_URL=https://calendly.com/your-username/30min

# ====================
# RECAPTCHA
# ====================
# Google reCAPTCHA v3 keys (for spam protection)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ====================
# DEVELOPMENT
# ====================
NODE_ENV=development
# Set to 'production' when deploying
